import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.*;
class Asteroids_Small{
	Small_Asteroid asteroid;
	Timer time = null;
	
	public Asteroids_Small(){
		
		time = new Timer(100, new ActionListener(){
			asteroid.move();
			repaint();
		});
		
		JFrame f = new JFrame();
		JPanel pan = new JPanel();
		f.add(pan);
		
    }
	
    public void paintComponent (Graphics g){
        public void paintComponent(Graphics g){
            super.paintComponent(g);
				asteroid.draw(g);
			}
        }
    }
	class Small_Asteroid{
		int x;
		int y;
		double angle;
		
		public Small_Asteroid(){
			
		}
		public draw(Graphics g){
			Graphics2D gg = (Graphics2D) g;
			gg.setStroke(new BasicStroke(4));
			g.drawPolygon();
		}
	}
}
